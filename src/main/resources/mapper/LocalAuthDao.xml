<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzz.o2o.dao.LocalAuthDao">
   <resultMap id="localAuthResultMap" type="com.zzz.o2o.entity.LocalAuth">
       <id column="local_auth_id" property="localAuthId"/>
       <result column="username" property="username"/>
       <result column="password" property="password"/>
       <result column="create_time" property="createTime"/>
       <result column="last_edit_time" property="lastEditTime"/>
       <association property="personInfo" column="user_id" javaType="com.zzz.o2o.entity.PersonInfo">
           <id column="user_id" property="userId"/>
           <result column="name" property="name"/>
           <result column="gender" property="gender"/>
           <result column="email" property="email"/>
           <result column="profile_img" property="profileImg"/>
           <result column="user_type" property="userType"/>
           <result column="create_time" property="createTime"/>
           <result column="last_edit_time" property="lastEditTime"/>
           <result column="enable_status" property="enableStatus"/>
       </association>
   </resultMap>
    <select id="queryLocalByUserNameAndPwd" resultMap="localAuthResultMap" parameterType="string">
        SELECT
        i.local_auth_id,
        i.username,
        i.password,
        i.create_time,
        i.last_edit_time,
        p.user_id,
        p.name,
        p.gender,
        p.email,
        p.profile_img,
        p.user_type,
        p.create_time,
        p.last_edit_time,
        p.enable_status
        FROM tb_local_auth i
        LEFT JOIN tb_person_info p
        ON p.user_id = i.user_id
        WHERE i.username = #{username} AND i.password = #{password}
    </select>
    <insert id="insertLocalAuth"  parameterType="com.zzz.o2o.entity.LocalAuth" useGeneratedKeys="true" keyProperty="localAuth.localAuthId" keyColumn="local_auth_id">
        INSERT INTO
        tb_local_auth(username,password,user_id,create_time,last_edit_time)
        VALUES
        (#{localAuth.username},#{localAuth.password},#{localAuth.personInfo.userId},#{localAuth.createTime},#{localAuth.lastEditTime})
    </insert>
    <update id ="updateLocalAuth" >
        UPDATE tb_local_auth
        <set>
            <if test="newPassword !=null">password = #{newPassword},</if>
            <if test="lastEditTime !=null">last_edit_time=#{lastEditTime}</if>
        </set>
        WHERE user_id = #{userId}
        AND username = #{username}
        AND password = #{password}
    </update>

</mapper>